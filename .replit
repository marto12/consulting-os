entrypoint = "README.md"
modules = ["nodejs-22", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
run = ["npm", "run", "server:prod"]
publicDir = "dist"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8082
externalPort = 3001

[[ports]]
localPort = 24678
externalPort = 3000

[env]
PORT = "5000"

[agent]
stack = "nodejs"
integrations = ["javascript_openai_ai_integrations:2.0.0", "github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start App"

[[workflows.workflow]]
name = "Start App"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server:dev"
waitForPort = 5000
